    "version": "2.0.0",
    "tasks": [
        {
            "label": "expo: publish (statging)",
            "type": "shell",
            "command": "expo",
            "args": [
                "publish",
                "--release-channel",
                "staging",
            ],
            "problemMatcher": [],
        },
        {
            "label": "expo: publish:history",
            "type": "shell",
            "command": "expo",
            "args": [
                "publish:history",
            ],
            "problemMatcher": [],
        },
        {
            "label": "expo: publish:details",
            "type": "shell",
            "command": "expo",
            "args": [
                "publish:details",
                "--publish-id",
                "${input:publicationId}",
            ],
            "problemMatcher": [],
        },
        {
            "label": "eas: build:configure",
            "type": "shell",
            "command": "eas",
            "args": [
                "build:configure",
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
            },
        },
        {
            "label": "eas: build:android (local)",
            "type": "shell",
            "command": "eas",
            "args": [
                "build",
                "--platform",
                "android",
                "--profile",
                "development",
                "--local",
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "npm install",
            "type": "shell",
            "command": "npm",
            "args": [
                "install",
            ],
            "problemMatcher": [],
        },
        {
            "label": "npm-check-updates",
            "type": "shell",
            "command": "npm install npm-check-updates && npm-check-updates -u",
            "problemMatcher": [],
